<!DOCTYPE html>

<html lang="en">
<head>
    @{
        await Html.RenderPartialAsync("Header/_HeaderLandingLayout.cshtml");
    }    
</head>
<!-- BEGIN Body -->
<body>
    <div class="page-wrapper auth">
        <div class="page-inner bg-brand-gradient">
            <div class="page-content-wrapper bg-transparent m-0">
                <div class="height-10 w-100 shadow-lg px-4 bg-brand-gradient">
                    <div class="d-flex align-items-center container p-0">
                        <div class="page-logo width-mobile-auto m-0 align-items-center justify-content-center p-0 bg-transparent bg-img-none shadow-0 height-9 border-0">
                            <a href="~/" class="page-logo-link press-scale-down d-flex align-items-center">
                                <img src="~/images/logo.png" alt="Patient Access System- WebApp" aria-roledescription="logo">
                                <span class="h4 ml-2 text-white">Patient Access System</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-1" style="background: url(~/images/svg/pattern-1.svg) no-repeat center bottom fixed; background-size: cover;">
                    <div class="container py-4 py-lg-5 my-lg-5 px-4 px-sm-0 text-white d-flex align-items-center justify-content-center">

                        <div class="container col-sm-12">
                            <main role="main" class="pb-3">
                                @RenderBody()
                            </main>
                        </div>

                    </div>

                    <footer class="page-footer invisible d-none" role="contentinfo">
                        <div class="d-flex align-items-center flex-1 text-muted">
                            @DateTime.Today.Year &copy; Patient Access System&nbsp;<a href='https://www.ZaiyanSystems.com' class='text-white opacity-40 fw-500' title='gotbootstrap.com' target='_blank'>Zaiyan Systems</a>
                        </div>
                        <div>
                            <ul class="list-table m-0">
                                <li><a href="intel_introduction.html" class="text-secondary fw-700">About</a></li>
                                <li class="pl-3"><a href="info_app_licensing.html" class="text-secondary fw-700">License</a></li>
                                <li class="pl-3"><a href="info_app_docs.html" class="text-secondary fw-700">Documentation</a></li>
                                <li class="pl-3 fs-xl"><a href="https://wrapbootstrap.com/user/MyOrange" class="text-secondary" target="_blank"><i class="fal fa-question-circle" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                    </footer>

                </div>
            </div>
        </div>
    </div>

    @{
        await Html.RenderPartialAsync("_PageLoadingAnimation.cshtml");
    }

    <script src="~/js/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/vendors.bundle.js"></script>
    @*<script src="~/js/app.bundle.js"></script>
    *@

    @RenderSection("Scripts", required: false)

</body>
<!-- END Body -->
</html>
