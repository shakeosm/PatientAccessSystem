@{
    ViewData["Title"] = "Home";
}

    <header class="bg-primary py-5 mb-5">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-lg-12">
                    <h1 class="display-4 text-white mt-5 mb-2">Patient Access System</h1>
                    <p class="lead mb-5 text-white-50">
                        Patient Access System connects you to your medical profile when you need them the most.<br/>
                        You can manage your medical history, test results and share them with your doctor.
                    </p>
                </div>
            </div>
        </div>
    </header>

<div class="text-center">
    <div class="col-sm-4 col-xs-6 d-none" id="ButtonContainerDiv">
        <a id="LoginLinkButton" class="nav-link text-dark"
           asp-area="Identity" asp-page="/Account/Login"
           aria-labelledby="Access your Account">Access your Account</a>

        <a id="RegisterLinkButton" class="nav-link text-dark"
           asp-area="Identity" asp-page="/Account/Register"
           aria-labelledby="Create new Account">Create new Account</a>

        <a id="RegisterLinkButton" class="nav-link text-dark"
           asp-action="Index" asp-controller="Prescription"
           aria-labelledby="Print Prescription">Print Prescription</a>
    </div>
    <div class="banner text-center">
        <img src="~/images/patient-status.png" alt="" style="width:600px; height: 386px;" />
    </div>

    @* Log in as Options *@
    <div class="mt-3">
        <a class="btn btn-outline-primary" asp-area="Patient" asp-controller="Home" asp-action="Index" role="button">
            <img src="~/images/patient-01.jfif" alt="Login as Patient" style="width: 100px; height:100px;" />
            <br />
            Patient
        </a>
        <a class="btn btn-outline-success ml-3" asp-area="Doctor" asp-controller="Home" asp-action="Index" role="button">
            <img src="~/images/doctor.jfif" alt="Login as Doctor" style="width: 100px; height:100px;" />
            <br />
            Doctor
        </a>
        <a class="btn btn-outline-info ml-3" asp-area="Hospital" asp-controller="Home" asp-action="Index" role="button">
            <img src="~/images/hospital-02.png" alt="Login as Hospital" style="width: 100px; height:100px;" /><br />
            Hospital
        </a>
    </div>

</div>
